  <body>
    <div id="body-wrap">
      <div class="container">
        <div class="header-playlists-container">
          <header>
            <div class="menu-bar">
              <nav class="nav-bar">
                <div class="logo-container">
                  <img src="images/spotify-logo.png" alt="spotify logo" />
                </div>
                <div class="navbar-brand-container">
                  <a id="navbar-brand" href="#"> Spoti-Afro </a>
                </div>
              </nav>
              <!-- end of navbar-->
            </div>
            <!-- end of menu-bar div -->
          </header>
          <!-- end of header element -->

          <div id="playlist-sidebar">
            <p>Select a playlist</p>
          </div>
        </div>
        <!-- end of header-playlists-container div -->

        <div class="playlist-grid-container">
          <div class="playlist-wrap">
            <img src="#" alt="" />
            <p>Top Songs Nigeria</p>
          </div>
          <div class="playlist-wrap">
            <img src="#" alt="" />
            <p>Afro Pop</p>
          </div>
          <div class="playlist-wrap">
            <img src="#" alt="" />
            <p>Afro Hits</p>
          </div>
          <div class="playlist-wrap">
            <img src="#" alt="" />
            <p>New Music Friday</p>
          </div>
          <div class="playlist-wrap">
            <img src="#" alt="" />
            <p>Hot Hits Naija</p>
          </div>
          <div class="playlist-wrap">
            <img src="#" alt="" />
            <p>Gbedu</p>
          </div>
        </div>
      </div>
      <!-- end of container div -->
    </div>
    <!-- end of body-wrap div -->

