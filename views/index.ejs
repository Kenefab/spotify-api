                      <div class="song-image-wrap">
                        <img src="images/electricity.png" alt="song-2" />
                      </div>

                      <div class="song-info-wrap">
                        <div class="title-artist-wrap">
                          <h6 class="song-title">Electricity</h6>
                          <p class="artist-name">Pheelz, Davido</p>
                        </div>
                      </div>
                      <!-- end of song-info-wrap div -->

                      <div class="time-wrap">
                        <p class="time">2:12</p>
                      </div>
                    </div>
                    <!-- end of song div -->
                  </li>
                </ol>
                <!-- end of ordered-list -->
              </div>
              <!-- end of song-list-wrap div -->
            </div>
            <!-- end of current-playlist div -->
          </div>
          <!-- end of playlist-sidebar div -->
        </div>
        <!-- end of header-playlists-container div -->
      </div>
      <!-- end of container div -->
    </div>
    <!-- end of body-wrap div -->

    <p><% message %></p>
    <a href="/home"><button>Go to home</button></a>

    <script src="js/main.js"></script>
